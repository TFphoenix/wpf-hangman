<Window x:Class="Hangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Hangman.Views"
        xmlns:local="clr-namespace:Hangman"
        mc:Ignorable="d"
        Title="Teodor's Hangman"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Height="720" Width="1280"
        MinHeight="480" MinWidth="720"
        Icon="../Resources/Logo/hangman_logo.ico"
        Background="#222222">

    <Grid>
        <views:MainMenuView x:Name="MainMenuView" Visibility="Visible"/>
        <views:LoginView x:Name="LoginView" Visibility="Hidden"/>
        <views:NewUserView x:Name="NewUserView" Visibility="Hidden"/>
        <views:SavedGameView x:Name="SavedGameView" Visibility="Hidden"/>
        <views:CategoriesView x:Name="CategoriesView" Visibility="Hidden"/>
        <views:GameView x:Name="GameView" Visibility="Hidden"/>
        <views:StatisticsView x:Name="StatisticsView" Visibility="Hidden"/>
    </Grid>
</Window>
